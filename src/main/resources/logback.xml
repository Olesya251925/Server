<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Конфигурация для записи логов в файл -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/server.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %level - %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Логгер для INFO уровня и выше -->
    <root level="info">
        <appender-ref ref="FILE" />
    </root>

    <!-- Конфигурация для архивирования файла логов при достижении 10 МБ -->
    <appender name="ARCHIVE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %level - %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

</configuration>
